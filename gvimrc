" Default starting size
set lines=64 columns=160

" Full-screen options.
set fuoptions=maxvert,maxhorz

" Set the font.
set guifont=Menlo:h12

" Hide the toolbar.
set guioptions-=T

" Hide the scrollbars.
set guioptions-=r " right-hand scrollbar
set guioptions-=R " right-hand scrollbar when v-split
set guioptions-=l " left-hand scrollbar
set guioptions-=L " left-hand scrollbar when v-split.
