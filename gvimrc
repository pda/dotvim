" Set the font.
if has("gui_gnome")
  set guifont=Inconsolata\ Medium\ 12
endif

" Hide the toolbar.
set guioptions-=T

" Hide the scrollbars.
set guioptions-=r " right-hand scrollbar
set guioptions-=R " right-hand scrollbar when v-split
set guioptions-=l " left-hand scrollbar
set guioptions-=L " left-hand scrollbar when v-split.
